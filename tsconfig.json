{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx", // Importante para o React 17+
    "declaration": true, // ESSENCIAL: Gera os arquivos de definição de tipos (.d.ts)
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist", // Onde o JavaScript compilado será salvo
    "rootDir": "./src", // Onde está nosso código fonte TypeScript
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "ES2020"
    ]
  },
  "include": [
    "src/**/*"
  ], // Compilar apenas o que está na pasta src
  "exclude": [
    "node_modules",
    "dist"
  ]
}